@model IEnumerable<UserFavorite>
@{
    ViewData["Title"] = "My Favorites";
    Layout = "_ProfileLayout";
}

<div class="bg-gray-800 p-8 rounded-xl shadow-lg">
    <h3 class="text-2xl font-bold mb-6">My Favorite Movies</h3>

    @if (Model.Any())
    {
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-8">
            @foreach (var favorite in Model)
            {
                <a asp-controller="Movie" asp-action="Details" asp-route-id="@favorite.MovieId">
                    <div class="movie-card bg-gray-900 rounded-xl overflow-hidden">
                        <img src="@favorite.FullPosterPath" alt="@favorite.MovieTitle" class="w-full h-auto aspect-[2/3] object-cover">
                    </div>
                </a>
            }
        </div>
    }
    else
    {
        <div class="text-center text-gray-500 py-12">
            <p class="mt-4">You haven't favorited any movies yet.</p>
        </div>
    }
</div>